<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pricing - ZarVps</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <nav>
        <a href="/" class="nav-logo">ZarVps.</a>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/plans">Pricing</a>
        </div>
    </nav>

    <div class="page-container">
        <div class="reveal" style="text-align: center; margin-bottom: 50px;">
            <h1>Choose Your Plan</h1>
            <p style="color: #888;">No hidden fees. Cancel anytime.</p>
        </div>

        <div class="plans-grid reveal">
            <% for (const [key, plan] of Object.entries(plans)) { %>
            <div class="plan-card">
                <div class="plan-name"><%= plan.name %></div>
                <div class="plan-price">Rp <%= plan.price.toLocaleString() %><span>/mo</span></div>
                
                <ul class="plan-features">
                    <li><i class="fas fa-microchip"></i> <%= plan.cpu %></li>
                    <li><i class="fas fa-memory"></i> <%= plan.ram %></li>
                    <li><i class="fas fa-hdd"></i> NVMe SSD</li>
                    <li><i class="fas fa-network-wired"></i> 1Gbps Network</li>
                    <li><i class="fas fa-server"></i> SG Region</li>
                </ul>

                <a href="/checkout?plan=<%= key %>" class="btn-outline">Deploy Now</a>
            </div>
            <% } %>
        </div>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
